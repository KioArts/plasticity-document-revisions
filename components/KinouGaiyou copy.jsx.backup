import React from "react";
import { Callout } from "nextra/components";

const KinouGaiyou = ({ shortcut, command, button }) => {
  const keys = shortcut.split("+").map((key, index) => (
    <React.Fragment key={index}>
      <code>{key.trim()}</code>
      {index < shortcut.split("+").length - 1 && "+"}
    </React.Fragment>
  ));

  return (
    <Callout emoji="">
      <ul>
        <li>Shortcut: {shortcut ? <strong>{keys}</strong> : "なし"}</li>
        <li>
          Command: <strong>{command}</strong>
        </li>
        <li>Button: {button ? <strong>{button}</strong> : "なし"}</li>
      </ul>
    </Callout>
  );
};

export default KinouGaiyou;
